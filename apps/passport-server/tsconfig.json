{
  "extends": "@pcd/tsconfig/server.json",
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": false,
    "target": "ES2022",
    "module": "commonjs",
    "inlineSourceMap": true,
    "types": [
      "async-lock",
      "chai",
      "chai-as-promised",
      "chai-spies",
      "cors",
      "deep-equal-in-any-order",
      "express",
      "flat",
      "lodash",
      "mocha",
      "mocha-steps",
      "morgan",
      "node",
      "pg",
      "react",
      "request",
      "uuid",
      "yargs"
    ],
    "typeRoots": [
      "src/util/declarations/",
      "./node_modules/@types/",
      "../../node_modules/@types/"
    ]
  }
}
