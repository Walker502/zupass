{
  "extends": "@pcd/tsconfig/server.json",
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": false,
    "target": "ES2022",
    "module": "commonjs",
    "inlineSourceMap": true,
    "types": ["mocha-steps"],
    "typeRoots": [
      "src/util/declarations/",
      "./node_modules/@types/",
      "../../node_modules/@types/"
    ]
  }
}
