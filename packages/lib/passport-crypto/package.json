{
  "name": "@pcd/passport-crypto",
  "version": "0.10.0",
  "license": "GPL-3.0-or-later",
  "main": "./dist/node/index.js",
  "module": "./dist/browser/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/browser/index.mjs"
      },
      "node": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/node/index.mjs",
        "require": "./dist/node/index.js"
      },
      "default": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/browser/index.mjs"
      }
    }
  },
  "files": [
    "dist",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "lint": "eslint \"**/*.ts{,x}\"",
    "test": "ts-mocha --config ../../../.mocharc.js --exit test/**/*.spec.ts",
    "build": "yarn build:ts && yarn build:types",
    "build:ts": "yarn build:browser && yarn build:node",
    "build:browser": "tsup src/index.ts --platform=browser --out-dir=./dist/browser --format esm --clean",
    "build:node": "tsup src/index.ts --platform=node --out-dir=./dist/node --format cjs,esm --clean",
    "build:types": "rm tsconfig.tsbuildinfo && tsc --emitDeclarationOnly",
    "typecheck": "yarn tsc --noEmit",
    "prepublishOnly": "yarn build",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "libsodium-wrappers-sumo": "^0.7.11"
  },
  "devDependencies": {
    "@pcd/eslint-config-custom": "*",
    "@pcd/tsconfig": "*",
    "@types/libsodium-wrappers-sumo": "^0.7.6",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.0.22",
    "eslint": "^7.32.0",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "browser": {
    "crypto": false
  },
  "publishConfig": {
    "access": "public"
  }
}
